# Directus nastavení pro Railway
# Zkopíruj tento soubor na .env a vyplň hodnoty

# Databáze (Railway ji vytvoří automaticky)
DB_CLIENT=pg
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=directus
DB_USER=directus
DB_PASSWORD=directus_pass_123

# Admin přihlášení
ADMIN_EMAIL=vase@email.cz
ADMIN_PASSWORD=StrongPassword123!

# Bezpečnostní klíče (změňte na dlouhé náhodné řetězce!)
JWT_SECRET=your-super-long-random-jwt-secret-key-min-32-chars-please
KEY=your-super-long-random-encryption-key-min-32-chars
SECRET=your-super-long-random-secret-key-min-32-chars

# Port (Railway jej přepíše na 8055)
PORT=8055

# CORS (pro připojení z webu)
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PATCH,DELETE,OPTIONS

# Pro místní vývoj
NODE_ENV=development
